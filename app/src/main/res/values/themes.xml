<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SnapchatSplashScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/amarelo</item>
        <item name="colorPrimaryVariant">@color/amarelo</item>
        <item name="colorOnPrimary">@color/amarelo</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SnapchatSplashScreen" parent="Base.Theme.SnapchatSplashScreen" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/amarelo</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/snapchat</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.SnapchatSplashScreen</item>
    </style>

</resources>